package tato_bot_commands;



import kong.unirest.HttpResponse;
import kong.unirest.JsonNode;
import kong.unirest.Unirest;
import net.dv8tion.jda.api.events.message.guild.GuildMessageReceivedEvent;
import net.dv8tion.jda.api.hooks.ListenerAdapter;
import tato_bot.main;

public class Image extends ListenerAdapter {
	
	
	
	public void onGuildMessageReceived (GuildMessageReceivedEvent event)
	{
		String[] args = event.getMessage().getContentRaw().split("\\s+");
		
		
		
		if (args[0].equalsIgnoreCase(main.prefix + "panda"))
		{
			final HttpResponse<JsonNode> response = Unirest.get("https://some-random-api.ml/img/panda").asJson();
			event.getChannel().sendMessage(response.getBody().getObject().getString("link")).queue();
			event.getChannel().sendMessage("hi").queue();
			
		}
	}
}